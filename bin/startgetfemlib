#!/usr/bin/perl

print "loading and install for modifications the GETFEM library\n\n";

print "loading files from cvs\n";
`cd ..; cvs checkout getfem++/getfemlib`; print "\n\n";

print "Making links for C sources \n";
`mkdir -p sources`;
`cd sources; ln -sf ../getfemlib/*.C .`; print "\n\n";

print "Making links for includes files\n";
`mkdir -p include`;
`cd include; ln -sf ../getfemlib/*.h .`; print "\n\n";

print "Making links for test progams\n";
`mkdir -p programs`;
`cd programs; ln -sf ../getfemlib/test/* .`; print "\n\n";


print `bin/start_modif`;

