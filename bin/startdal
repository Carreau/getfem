#!/usr/bin/perl

print "loading and install for modifications the D.A.L. library\n\n";

print "loading files from cvs\n";
`cd ..; cvs checkout getfem++/dal`; print "\n\n";

print "Making links for C sources \n";
`mkdir -p sources`;
`cd sources; ln -sf ../dal/*.C .`; print "\n\n";

print "Making links for includes files\n";
`mkdir -p include`;
`cd include; ln -sf ../dal/*.h .`; print "\n\n";

print "Making links for test progams\n";
`mkdir -p programs`;
`cd programs; ln -sf ../dal/test/*.C .`; print "\n\n";


print `bin/startbgeot`;

