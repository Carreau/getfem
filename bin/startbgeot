#!/usr/bin/perl

print "loading and install for modifications the B.G.E.O.T. library\n\n";

print "loading files from cvs\n";
`cd ..; cvs checkout getfem++/bgeot`; print "\n\n";

print "Making links for C sources \n";
`mkdir -p sources`;
`cd sources; ln -sf ../bgeot/*.C .`; print "\n\n";

print "Making links for includes files\n";
`mkdir -p include`;
`cd include; ln -sf ../bgeot/*.h .`; print "\n\n";

print "Making links for test progams\n";
`mkdir -p programs`;
`cd programs; ln -sf ../bgeot/test/*.C .`; print "\n\n";


print `bin/startgetfem`;

