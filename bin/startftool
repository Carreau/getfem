#!/usr/bin/perl

print "loading and install for modifications the FTOOL library\n\n";

print "loading files from cvs\n";
`cd ..; cvs checkout getfem++/ftool`; print "\n\n";

print "Making links for C sources \n";
`mkdir -p sources`;
`cd sources; ln -sf ../ftool/*.C .`; print "\n\n";

print "Making links for includes files\n";
`mkdir -p include`;
`cd include; ln -sf ../ftool/*.h .`; print "\n\n";

print "Making links for test progams\n";
`mkdir -p programs`;
print "WARNING : No test programs\n";
#`cd programs; ln -sf ../dal/test/* .`; print "\n\n";

print `bin/start_modif`;

