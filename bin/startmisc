#!/usr/bin/perl

print "loading and install for modifications the MISC library\n\n";

print "loading files from cvs\n";
`cd ..; cvs checkout getfem++/misc`; print "\n\n";

print "Making links for C sources \n";
`mkdir -p sources`;
`cd sources; ln -sf ../misc/*.C .`; print "\n\n";
`cd sources; ln -sf ../misc/LEDAWIN/*.C .`; print "\n\n";

print "Making links for includes files\n";
`mkdir -p include`;
`cd include; ln -sf ../misc/*.h .`; print "\n\n";
`cd include; ln -sf ../misc/LEDAWIN/*.h .`; print "\n\n";

print "WARNING : no test progams\n";
# print "Making links for test progams\n";
# `mkdir -p programs`;
# `cd programs; ln -sf ../misc/test/* .`; print "\n\n";

print `bin/start_modif`;

