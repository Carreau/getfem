#!/usr/bin/perl

print "loading and install for modifications the MTLABINT library\n\n";

print "loading files from cvs\n";
`cd ..; cvs checkout getfem++/matlabint`; print "\n\n";

print "Making links for C sources \n";
`mkdir -p sources`;
`cd sources; ln -sf ../matlabint/*.C .`; print "\n\n";

print "Making links for includes files\n";
`mkdir -p include`;
`cd include; ln -sf ../matlabint/*.h .`; print "\n\n";

print "No test progams\n";
# print "Making links for test progams\n";
# `mkdir -p programs`;
# `cd programs; ln -sf ../bgeot/test/* .`; print "\n\n";

print `bin/start_modif`;

