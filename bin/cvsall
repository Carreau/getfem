
# -*- perl -*-
eval 'exec perl -S $0 "$@"'
  if 0;

$home = $ENV{HOME};

$root = "source++";
if ($home =~ /pommier/) {
  $root = "getfem";
}

foreach $dire ("getfem++", "getfem_matlab", "getfem_apps", "getfem_html", "gmm") {
  if (-d "$home/$root/$dire") {
    print "Check all modifications in $dire\n";
    print `cd $home/$root/$dire; cvsstat`;
  }
  else {
    print "You do not have CVS directory $dire\n";
  }
}






