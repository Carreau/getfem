eval 'exec perl -S $0 "$@"'
  if 0;

$CC = $ENV{CC};

# gerer les paramètres ...

while ($ARGV[0])
{
  if (($ARGV[0] =~ /\-\-CC=/) || ($ARGV[0] =~ /\-CC=/)) {
    ($li, $CC) = split('=', $ARGV[0], 2);
  }
  else
  { 
    die "Sorry, unrecognized option";
  }
  shift ARGV;
}

print "Compiler selected : $CC\n";
if ($CC) { $ENV{CC} = $CC; }

print "Installing Getfem++\n\n";

print "To compile the library, type make after the configuration process ended\n\n";

print "The library will be compiled in the files\n";
print "lib/libgetfem.a\n";
print "and\n";
print "lib/libgetfem.so\n";

# + commandes Matlab en options

# open F, "bin/install |" or die; while (<F>) { print $_; }

exec "bin/install";


