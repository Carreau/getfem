% -*- matlab -*- (enables emacs matlab mode)
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% parameters for program bilalacian                                     %
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%%%% pde parameters :	        				      %%%%%
LX = 1.0;		% size in X.
LY = 1.0;	        % size in Y.
LZ = 1.0;		% size in Z.
INCLINE = 0;            % Incline of the mesh.
N = 2;
QUAD = 0;
MESH_NOISED = 0;        % Set to one if you want to "shake" the mesh
NX = 1;                 % space step.
DIRICHLET_VERSION = 0;  % 0 = multipliers, 1 = penalization, 2 = elimination

%MESH_FILE='../../tests/meshes/disc_P2_h2.mesh'


if (N == 1)
  MESH_TYPE = 'GT_PK(1,1)';       % segments
  FEM_TYPE = 'FEM_HERMITE_SEGMENT';
  DATA_FEM_TYPE = 'FEM_PK(1,3)';
  INTEGRATION = 'IM_GAUSS1D(6)';  % Gauss-Legendre integration on
                                  % segments
end

if (N == 2 && ~QUAD)
  MESH_TYPE = 'GT_PK(2,1)';        % triangles
  INTEGRATION = 'IM_TRIANGLE(13)'; % quadrature rule for polynomials up
                                   % to degree 13 on triangles
  DATA_FEM_TYPE = 'FEM_PK(2,5)';
  if 0
    FEM_TYPE = 'FEM_HERMITE_TRIANGLE';
    DIRICHLET_FEM_TYPE = 'FEM_PK(2,2)';
  else 
    FEM_TYPE = 'FEM_ARGYRIS';
    DIRICHLET_FEM_TYPE = 'FEM_PK(2,5)';
  end
  % FEM_TYPE = 'FEM_PK(2,1)';
end

if (N == 2 && QUAD)
  error('Sorry, no hermite elements on quadrilaterals for the moment');
end

if (N == 3 && ~QUAD)
  error('Sorry, no hermite elements on tetrahedrons for the moment');
end

if (N == 3 && QUAD)
  error('Sorry, no hermite elements on hexahedrons for the moment');
end


if (N > 3)
  error('Correct the parameter file for N > 3');
end

RESIDUAL = 1E-9;     	% residual for conjugate gradient.

%%%%%   saving parameters                                             %%%%%
ROOTFILENAME = 'bilaplacian';     % Root of data files.
VTK_EXPORT = 2 % export solution to a .vtk file ?
